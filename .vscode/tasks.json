{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Backend Deps",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/pip",
      "args": ["install", "-r", "requirements.txt"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": []
    },
    {
      "label": "Install Frontend Deps",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": []
    },
    {
      "label": "Install All Deps",
      "dependsOn": [
        "Install Backend Deps",
        "Install Frontend Deps"
      ],
      "problemMatcher": []
    }
  ]
}
